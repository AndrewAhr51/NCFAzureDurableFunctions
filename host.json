{
  "version": "2.0",
  "functionTimeout": "00:05:00",
  "logging": {
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "excludedTypes": "Request"
      }
    }
  },
  "extensions": {
    "durableTask": {
      "hubName": "NCFDurableFunctionsHub",
      "storageProvider": {
        "type": "mssql",
        "connectionStringName": "DefaultConnection", // ✅ Matches appsettings.json
        "taskEventBatchSize": 20, // ✅ Optimizes batch processing
        "taskEventLockTimeout": "00:01:00" // ✅ Prevents long-running locks
      }
    }
  },
  "concurrency": {
    "dynamicConcurrencyEnabled": true
  }
}